[module/weather]
type = custom/script
exec = ~/scripts/polybar/weather.sh
label = "%output%"
click-left = kitty w3m wttr.in/Torre_da_Marinha &
interval = 1800

[module/volume]
type = custom/ipc
hook-0          = ~/scripts/polybar/volume.sh
click-right     = pavucontrol
click-left      = ~/scripts/pulseaudio/output-selector.sh
click-middle    = ~/scripts/pulseaudio/pulsevolctrl.sh "output-mute"
scroll-up       = ~/scripts/pulseaudio/pulsevolctrl.sh "output-vol" +5%
scroll-down     = ~/scripts/pulseaudio/pulsevolctrl.sh "output-vol" -5%
initial         = 1

[module/kdeconnect]
type = custom/script
exec = "~/.config/polybar/scripts/kdeconnect.sh -d"
tail = true

[module/updates]
type = custom/script
exec = ~/scripts/polybar/updates.sh
click-middle    = kitty yay -Syyu
interval = 1800
format-prefix = "ÔÄ° "
format-prefix-foreground = ${colors.blue}

[module/nvidia]
type = custom/script
exec = ~/scripts/polybar/nvidia.sh "load"
click-left= ~/scripts/polybar/nvidia.sh "notif"
interval = 1
format-prefix = "GPU: "
format-prefix-foreground = ${colors.blue}

